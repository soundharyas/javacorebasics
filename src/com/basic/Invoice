package com.basic;
public class EmployeeExample {
	String firstname;
	String lastname;
	double salary;
	public EmployeeExample() {
	}
	
	public String getFirstname() {
		return firstname;
	}
	public void setFirstname(String firstname) {
		this.firstname = firstname;
	}
	public String getLastname() {
		return lastname;
	}
	public void setLastname(String lastname) {
		this.lastname = lastname;
	}
	public double getSalary() {
		if(salary < 0) {
			return salary;
		}
		return 0;
	}
	
	public void setSalary(double salary) {
		this.salary = salary;
		
	}
	public static void main(String []args) {
		EmployeeExample e1 = new EmployeeExample();
		e1.setFirstname("firstname");
		e1.setSalary(10000);
		EmployeeExample e2 = new EmployeeExample();
		e2.setLastname("lastnameame");
		e1.setSalary(20000);
		System.out.println(e1.getSalary()*12);
		double Salary = e1.getSalary();
		Salary = e2.getSalary();
		e1.salary = Salary*1.1;
		e2.salary = Salary*1.1;
		System.out.println(e1.salary);
		System.out.println(e2.salary);
		
		
		
		
	
	}
	
		
	}
	


 
